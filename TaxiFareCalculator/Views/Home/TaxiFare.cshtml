@model TaxiFareCalculator.Models.TaxiFare

@{
    ViewBag.Title = "TaxiFare";
}
<h5>Complete form below to calculate your taxi rate</h5>

<Form ng-controller="TaxiFareController">
    <div>
        <table>
            <tr>
                <td width="180">
                    <label id="DateLabelID">Date of Trip:</label>
                </td>
                <td width="210">
                    <input type="date" id="DateOfTripID" ng-model="TaxiFare.DateOfTrip" required />
                </td>
            </tr>
            <tr>
                <td width="180">
                    <label id="TimeLabelID">Time of start of ride:</label>
                </td>
                <td width="210">
                    <input type="time" id="TimeOfTripID" ng-model="TaxiFare.TimeOfTrip" required />
                </td>
            </tr>
            <tr>
                <td width="180">
                    <label id="DistanceLabel2ID">Number of minutes while traveling above 6 mph:</label>
                </td>
                <td width="210">
                    <input type="number" id="Distance2ID" ng-model="TaxiFare.TimeTraveledOver6Mph" required />
                </td>
            </tr>
            <tr>
                <td width="180">
                    <label id="DistanceLabel1ID">Number of miles traveled while traveling below 6 mph:</label>
                </td>
                <td width="210">
                    <input type="number" id="Distance1ID" ng-model="TaxiFare.DistanceTraveledUnder6Mph" required />
                </td>
            </tr>
            <tr>
                <td width="180">
                    <label id="TotalLabelID">Total Fare:</label>
                </td>
                <td width="210">
                    <input type="number" id="TotalID" readonly {{Total}} />
                </td>
            </tr>
            <tr>
                <td width="50"></td>
                <td width="50">
                    <button id="SubmitID" ng-click="Submit()">Submit</button>
                </td>
                <td width="50">
                    <button id="ClearID" ng-click="Clear()">Clear</button>
                </td>
            </tr>
        </table>
    </div>
</Form>
