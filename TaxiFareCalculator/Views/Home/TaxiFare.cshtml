            </td>
            <td width="210">
                <input type="text" id="DestinationID" ng-model="Destination" />
            </td>
        </tr>*@
            <tr>
                <td width="180">
                    <label id="DistanceLabel2ID">Number of minutes while traveling above 6 mph:</label>
                </td>
                <td width="210">
                    <input type="text" id="Distance2ID" ng-model="DistanceTraveledOver6Mph" />
                </td>
            </tr>
            <tr>
                <td width="180">
                    <label id="DistanceLabel1ID">Number of miles traveled while traveling below 6 mph:</label>
                </td>
                <td width="210">
                    <input type="text" id="Distance1ID" ng-model="DistanceTraveledUnder6Mph" />
                </td>
            </tr>
            <tr>
                <td width="180">
                    <label id="TotalLabelID">Total Fare:</label>
                </td>
                <td width="210">
                    <input type="text" id="TotalID" readonly ng-model="Total" />
                </td>
            </tr>
            <tr>
                <td width="100"></td>
                <td width="50">
                    <button id="SubmitID" ng-click="Submit()">Submit</button>
                </td>
                <td width="50">
                    <button id="ClearID" ng-click="Clear()">Clear</button>
                </td>
            </tr>
        </table>
    </div>
</div>
