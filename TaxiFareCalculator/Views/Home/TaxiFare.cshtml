@model TaxiFareCalculator.Models.TaxiFare

@{
    ViewBag.Title = "TaxiFare";
}
<h4>Complete form below to calculate your taxi rate</h4>

<div ng-controller="TaxiFareController">
    {{Message}}
    <div>
        <table>
            <tr>
                <td width="180">
                    <label id="DateLabelID">Date of Trip:</label>
                </td>
                <td width="210">
                    <input type="date" id="DateOfTripID" ng-model="DateOfTrip" />
                </td>
            </tr>
            <tr>
                <td width="180">
                    <label id="TimeLabelID">Time of start of ride:</label>
                </td>
                <td width="210">
                    <input type="time" id="TimeOfTripID" ng-model="TimeOfTrip" />
                </td>
            </tr>
